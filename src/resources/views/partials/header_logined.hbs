<div class="header">   
    <div class="container">
        <div class="header__top">
            <div class="row">
                <nav id="new-navbar" class="new-nav-header d-none d-xl-flex col-xl-1 col-lg-1" style="margin-right : 30px">
        <button id="toggle-nav" class="new-nav-header__toggle-btn">
            <img src="/assets/icons/navbar.svg" style="width: 40px; height: 40px" alt="Toggle Menu" />
        </button>

        <div id="new-navbar-overlay" class="new-nav-header__overlay">
            <button id="close-overlay" class="new-nav-header__close-btn" style="font-size: 6rem;">&times;</button>
                 <a href="/profile" class="" style="display: flex; align-items : center ; gap:10px">
                        <img src="{{profile.image}}" alt="" class="avatar" />
              <h1 class="navbar__name" style="font-size: 2rem; color:red ; font-weight: 700">
               <span class="navbar__name-user">{{profile.username}}</span>
              </h1>
                 </a>
                <div style="display: flex; align-items :center ; gap : 10px ; justify-content :space-between; margin-top :10px">
                      <div class="nav-header__home">
                        <a href="/logined" class="">
                        <img src="/assets/icons/home.svg" alt="" class="nav-header__home--img">
                        </a>
                    </div>
                     <div class="nav-header__contact-us">
                        <a href="/contact_us" class="">
                            <img src="/assets/icons/contact.svg" alt="" class="nav-header__contact-us-img">
                        </a>
                    </div>
                </div>
            <div class="new-nav-header__category">
                <ul class="new-nav-header__category-list">
                    {{#each categoriesWithChildren}}
                        <li class="new-nav-header__category-item">
                            <h1 class="new-nav-header__category-item-name">{{this.parentCategory.name}}</h1>
                            <ul class="new-nav-item">
                                {{#each this.childCategories}}
                                    <li>
                                        <a href="/search/category/{{this._id}}" class="new-nav-header__link">{{this.name}}</a>
                                    </li>
                                {{/each}}
                            </ul>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
                 </nav>
                <div class="col-3 col-xl-2 col-lg-3 col-sm-6 d-flex justify-content-center mt-3">
                        <div class="des-current-day">
                            <div class="weather">
                                <img src="https://static.mediacdn.vn/images/icon_weather/nhieu-may.png
                " alt="cloud" class="weather__img"></img>
                                <span class="weather__des">28°C Hồ Chí Minh</span>
                            </div>
                            <div class="day-month-year">
                                <span class="day">Wednesday</span>
                                <span class="date">20</span>
                                <span>/</span>
                                <span class="month">11</span>
                                <span>/</span>
                                <span class="year">2024</span>
                            </div>
                    </div>
                </div> 
                <div class="col-xl-1 col-lg-2 col-sm-6 d-flex justify-content-center mt-3">
                            <div class="logo">
                                <a href="/logined"><img src="/assets/img/logo/rises.png" alt="" class="logo__img"></a>
                            </div>
                </div>
               <div class="col-xl-3 col-lg-6 col-sm-12">
                    <div class="search">
                        <form class="form__header" action="/search" method="get" id="searchForm">
                        <input
                            class="search__input"
                            type="text"
                            name="q"
                            placeholder="Search"
                        />
                        </form>
                        <img
                        src="/assets/icons/search.svg"
                        class="search__icon"
                        alt="Search Icon"
                        onclick="submitSearchForm()"
                        />
                    </div>
                </div>
                <div class="col-xl-3 col-lg-12 col-sm-12 d-flex justify-content-center align-items-center mt-2">
                        <div class="social">
                            <a href="">
                                <img src="/assets/icons/twitter.svg" alt="twitter" title="Twitter" class="social__icon social__twitter">
                            </a>
                            <a href="">
                                <img src="/assets/icons/facebook.svg" alt="facebook" title="Facebook" class="social__icon social__facebook">
                            </a>
                            <a href="">
                                <img src="/assets/icons/linkedin.svg" alt="linkedin" title="Linkedin" class="social__icon social__linkedin">
                            </a>
                            <a href="">
                                <img src="/assets/icons/instagram.svg" alt="instagram" title="Instagram" class="social__icon social__instagram">
                            </a>
                            <a href="">
                                <img src="/assets/icons/youtube.svg" alt="youtube" title="Youtube" class="social__icon social__youtube">
                            </a>
                        </div>
                </div>
                <div class="col-2 col-xl-1 col-lg-12 col-sm-12 d-flex justify-content-center mt-2 align-items-center ">
                    {{#if (eq profile.role "guest")}}
                    <div class="vip-registration">
                        <a href="/vip_registration" class="action_vip-registration">
                            <p>Vip registration</p>
                        </a>
                    </div>
                    {{/if}}
                    {{#if (eq profile.role "subscriber")}}
                    <div class="vip-registration">
                        <a href="/vip_registration" class="action_vip-registration">
                            <p>Vip registration</p>
                        </a>
                    </div>
                    {{/if}}
                    <div  class="top-act__user">
                    <a href="/profile"> <img src="{{profile.image}}" alt="" class="avatar" /></a>
                    <div class="act-dropdown top-act__dropdown">
                        <div class="act-dropdown__arrow icon top-act__dropdown-arrow">
                        <img src="/assets/icons/arrow-up.png" alt="" class="act-dropdown__arrow-img">
                        </div>
                        <div class="act-dropdown__inner top-act__dropdown-inner">
                        <div class="user-menu">
                        <a href="/profile">
                            <div class="user-menu__top">
                            <img src="{{profile.image}}" alt="" class="avatar">
                            <div>
                            <p class="user-menu__name">{{profile.username}}</p>
                            </div>
                            </div>
                        </a>
                        <ul class="user-menu__list">
                            <li>
                            <a href="/profile" class="user-menu__link">
                                <img src="/assets/icons/profile-user.svg" alt="" class="icon user-menu__icon">
                                Profile
                            </a>
                            </li>
                            <li>
                            <li class="user-menu__separate">
                            </li>
                            <a href="/profile" class="user-menu__link">
                                <img src="/assets/icons/favourite.svg" alt="" class="icon user-menu__icon">
                                Separation of Powers</a>
                            </li>
                            <li class="user-menu__separate">
                            </li>
                 
                            <li class="user-menu__separate">
                            <a href="/auth/logout" class="user-menu__link">
                                <img src="/assets/icons/logout.svg" alt="" class="icon user-menu__icon">
                                
                                Logout</a>
                            </li>
                        </ul>
                        </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <nav id="navbar" class="nav-header d-flex d-xl-none">
                <div class="nav-header__home">
                    <a href="/logined" class="">
                    <img src="/assets/icons/home.svg" alt="" class="nav-header__home--img">
                    </a>
                </div>
                <div class="nav-header__category">
                    <button class="nav-control nav-previous"><</button>
                    <ul class="nav-header__category-list"> 
                        {{#each categoriesWithChildren}}
                        <li class="nav-header__category-item">
                            <h1 class="nav-header__category-item-name">{{this.parentCategory.name}}</h1>
                            <ul class="nav-item">
                                {{#each this.childCategories}}
                                <li>
                                    <a href="/search/category/{{this._id}}" class="nav-header__link">{{this.name}}</a>
                                </li>
                                {{/each}}
                            </ul>
                        </li>
                        {{/each}}
                      
                    </ul>    
                    <button class="nav-control nav-next">></button>          
                </div>
                <div class="nav-header__contact-us">
                    <a href="/contact_us" class="">
                        <img src="/assets/icons/contact.svg" alt="" class="nav-header__contact-us-img">
                    </a>
                </div>
        </nav>
    

    </div>
</div>