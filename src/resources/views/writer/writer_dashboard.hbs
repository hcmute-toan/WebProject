<div class="authHeader">
  <div class="branch"><h1>Article Management</h1></div>
</div>
<div class="container">
  <!-- Nút thêm bài viết -->
  <div class="action_btn">
    <div class="back-btn-container">
      <a href="/logined" class="btn btn-back">Back</a>
    </div>
    <div class="add-btn-container">
      <a href="/writer/write-article" class="btn btn-add">Add article</a>
    </div>

  </div>

  <div class="table-responsive">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Image</th>
          <th>Title</th>
          <th>Date created</th>
          <th>Summary</th>
          <th>Category</th>
          <th>Status</th>
          <th>Act</th>
        </tr>
      </thead>
      <tbody>
        {{#if articles.length}}
          {{#each articles}}
            <tr>
              <td>{{increment @index}}</td>
              <td>
                {{#if image_url}}
                  <img src="{{image_url}}" class="article-img" />
                {{else}}
                  No photo
                {{/if}}
              </td>
              <td>{{title}}</td>
              <td>{{formatDate created_at}}</td>
              <td>{{summary}}</td>
              <td>
                {{#if category_id}}
                  {{#if category_id.name}}{{category_id.name}}{{else}}No
                    category name{{/if}}
                {{else}}
                  <h2 style="color :red">Not attached yet</h2>
                {{/if}}
              </td>
              <td>
                {{#if (eq status "draft")}}
                  <span class="status draft">Not approved yet</span>
                {{else if (eq status "published")}}
                  <span class="status published">Published</span>
                {{else if (eq status "rejected")}}
                  <span class="status rejected">Rejected</span>
                {{else}}
                  No status
                {{/if}}
              </td>
              <td>
                {{#if (eq status "draft")}}
                  <a
                    href="/writer/{{this._id}}/edit-article"
                    class="btn btn-edit"
                  >Update</a>
                {{else if (eq status "published")}}
                  <span class="status published">Published</span>
                {{else if (eq status "rejected")}}
                  <a
                    href="/writer/{{this._id}}/edit-article"
                    class="btn btn-edit"
                  >Update</a>
                {{else}}
                  No status
                {{/if}}
              </td>
            </tr>
          {{/each}}
        {{else}}
          <tr>
            <td colspan="8"><h1>Empty</h1></td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</div>
{{!  }}
<div
  class="modal fade"
  id="deleteModal"
  hidden
  tabindex="-1"
  role="dialog"
  aria-labelledby="deleteModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this article?
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >Cancel</button>
        <button
          type="button"
          class="btn btn-danger"
          id="confirmDeleteBtn"
        >Delete</button>
      </div>
    </div>
  </div>
</div>