<div class="container mt-5">

  <div class="container-fluid">
    <div class="row">
      <div class="col-3">
        <ul class="admin__list">
          <li class="admin__item">
            <a href="/admin/dashboard"><span>
                Dashboard</span></a>
          </li>
          <li class="admin__item">
            <a href="/admin/manage-articles"><span>
                Manage Articles</span></a>
          </li>
          <li class="admin__item">
            <a href="/admin/manage-users"><span>
                Manage Users</span></a>
          </li>
          <li class="admin__item active">
            <a href="/admin/manage-categories"><span>
                Manage Categories</span></a>
          </li>
          <li class="admin__item">
            <a href="/admin/manage-tags"><span>
                Manage Tags</span></a>
          </li>
          <li class="admin__item">
            <a href="/admin/extend-subscription"><span>
                Extend Subscription</span></a>
          </li>
        </ul>
      </div>
      <div class="col-9">
        <h1 class="admin__heading"> Manage Categories</h1>
        <div
          style="display: flex; align-items: center; gap: 10px; margin-bottom: 20px;"
        >
          <input
            type="text"
            id="categorySearch"
            placeholder="Search categories by name or parent category..."
            style="flex: 1; padding: 10px; font-size: 16px;"
          />
          <button
            id="categorySearchButton"
            class="btn btn-primary"
          >Search</button>
        </div>
        <div class="action_btn">
          <div class="back-btn-container">
            <a href="/admin/dashboard" class="btn btn-back">Back</a>
          </div>
          <div class="add-btn-container">
            <a href="/admin/manageAddCategories" class="btn btn-add">Add
              Category</a>
          </div>

        </div>
        <table class="admin__table">
          <thead>
            <tr>
              <th>ID
                <button
                  class="sort-btn"
                  data-sort="id"
                  data-order="asc"
                >▲</button>
                <button
                  class="sort-btn"
                  data-sort="id"
                  data-order="desc"
                >▼</button>
              </th>
              <th>Parent Category
                <button
                  class="sort-btn"
                  data-sort="parent"
                  data-order="asc"
                >▲</button>
                <button
                  class="sort-btn"
                  data-sort="parent"
                  data-order="desc"
                >▼</button>
              </th>
              <th>Name
                <button
                  class="sort-btn"
                  data-sort="name"
                  data-order="asc"
                >▲</button>
                <button
                  class="sort-btn"
                  data-sort="name"
                  data-order="desc"
                >▼</button>
              </th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each category}}
              <tr>
                <td>{{increment @index}}</td>
                <td>
                  {{#if this.parent_id}}
                    {{this.parent_id.name}}
                  {{else}}
                    It is Parent Category
                  {{/if}}
                </td>
                <td>{{this.name}}</td>
                <td>
                  <a
                    href="/admin/{{this._id}}/manageEditCategories"
                    class="btn btn-add"
                  >Edit</a>
                  <a
                    href="#"
                    class="btn btn-danger btn-add"
                    data-toggle="modal"
                    data-target="#deleteModal"
                    data-id="{{this._id}}"
                  >Delete</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>

<!-- Modal Xác Nhận Xóa -->
<div
  class="modal fade"
  id="deleteModal"
  hidden
  tabindex="-1"
  role="dialog"
  aria-labelledby="deleteModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-delete__admin" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this category?
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >Cancel</button>
        <button
          type="button"
          class="btn btn-danger"
          id="confirmDeleteBtn"
        >Delete</button>
      </div>
    </div>
  </div>
</div>