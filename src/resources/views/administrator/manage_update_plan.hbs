<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Subscription Plan Form</title>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css"
    />
    <style>
      /* Custom styles for input fields */ input.form-control,
      textarea.form-control { height: 50px; /* Increase height */ padding: 10px
      15px; /* Add padding */ font-size: 16px; /* Make text larger */ }
      textarea.form-control { height: auto; /* Allow textarea to resize */ }
      .container { max-width: 600px; /* Limit form width */ }
    </style>
  </head>
  <body>
    <div class="container mt-5 mb-5">
      <h1 class="text-center mb-4">Subscription Plan Form</h1>
      <form
        action="/admin/{{plan._id}}/manage-UpdateSave-extend-subscription?_method=PUT"
        method="POST"
      >
        <div class="form-group">
          <label for="name">Plan Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            placeholder="Enter plan name"
            value="{{plan.name}}"
            required
          />
        </div>
        <div class="form-group">
          <label for="duration">Duration (days)</label>
          <input
            type="number"
            class="form-control"
            id="duration"
            name="duration"
            value="{{plan.duration}}"
            placeholder="Enter duration in days"
            required
          />
        </div>
        <div class="form-group">
          <label for="originalPrice">Original Price</label>
          <input
            type="number"
            class="form-control"
            id="originalPrice"
            name="originalPrice"
            value="{{plan.originalPrice}}"
            placeholder="Enter original price"
            required
          />
        </div>
        <div class="form-group">
          <label for="discountedPrice">Discounted Price</label>
          <input
            type="number"
            class="form-control"
            id="discountedPrice"
            name="discountedPrice"
            value="{{plan.discountedPrice}}"
            placeholder="Enter discounted price"
            required
          />
        </div>
        <div class="form-group">
          <label for="dailyCost">Daily Cost</label>
          <input
            type="number"
            class="form-control"
            id="dailyCost"
            name="dailyCost"
            value="{{plan.dailyCost}}"
            placeholder="Enter daily cost"
            required
          />
        </div>
        <div class="form-group">
          <label for="discountPercent">Discount Percent (%)</label>
          <input
            type="number"
            class="form-control"
            id="discountPercent"
            name="discountPercent"
            value="{{plan.discountPercent}}"
            placeholder="Enter discount percentage"
            required
          />
        </div>
        <!-- Optional Description Field -->
        <div class="form-group">
          <label for="description">Description</label>
          <textarea
            class="form-control"
            id="description"
            name="description"
            placeholder="Enter a brief description (optional)"
          >{{plan.description}}</textarea>
        </div>
        <!-- Submit Button -->
        <button
          type="submit"
          class="btn btn-primary btn-block"
          style="height: 40px"
        >
          <strong>Submit Plan</strong>
        </button>
      </form>
    </div>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>