<div class="container mt-5">

  <div class="container-fluid">
    <div class="row">
      <div class="col-3">
        <ul class="admin__list">
          <li class="admin__item">
            <a href="/admin/dashboard"><span>
                Dashboard</span></a>
          </li>
          <li class="admin__item">
            <a href="/admin/manage-articles"><span>
                Manage Articles</span></a>
          </li>
          <li class="admin__item">
            <a href="/admin/manage-users"><span>
                Manage Users</span></a>
          </li>
          <li class="admin__item">
            <a href="/admin/manage-categories"><span>
                Manage Categories</span></a>
          </li>
          <li class="admin__item active">
            <a href="/admin/manage-tags"><span>
                Manage Tags</span></a>
          </li>
          <li class="admin__item">
            <a href="/admin/extend-subscription"><span>
                Extend Subscription</span></a>
          </li>
        </ul>
      </div>
      <div class="col-9">
        <h1 class="admin__heading"> Manage Tag</h1>
        <div
          class="action_btn"
          style="display: flex; justify-content: space-between; align-items: center;"
        >
          <div>
            <input
              type="text"
              id="tagSearch"
              placeholder="Search tags..."
              class="form-control"
              style="width: 300px; display: inline-block;"
            />
            <button id="tagSearchButton" class="btn btn-primary">Search</button>
          </div>
          <a href="/admin/manage-add-tags" class="btn btn-add">Add Tag</a>
        </div>
        <div class="action_btn">
          <div class="back-btn-container">
            <a href="/admin/manage-tags" class="btn btn-back">Back</a>
          </div>
          <div class="add-btn-container">
            <a href="/admin/manage-add-tags" class="btn btn-add">Add Tags</a>
          </div>
        </div>
        <table class="admin__table">
          <thead>
            <tr>
              <th>ID
                <button
                  class="sort-btn"
                  data-sort="id"
                  data-order="asc"
                >▲</button>
                <button
                  class="sort-btn"
                  data-sort="id"
                  data-order="desc"
                >▼</button>
              </th>
              <th>Name
                <button
                  class="sort-btn"
                  data-sort="name"
                  data-order="asc"
                >▲</button>
                <button
                  class="sort-btn"
                  data-sort="name"
                  data-order="desc"
                >▼</button>
              </th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each tags}}
              <tr>
                <td>{{increment @index}}</td>
                <td>{{this.name}}</td>
                <td>
                  <a
                    href="/admin/{{this._id}}/manage-Update-tags"
                    class="btn btn-add"
                  >Edit</a>
                  <a
                    href="#"
                    class="btn btn-danger btn-add"
                    data-toggle="modal"
                    data-target="#deleteModal"
                    data-id="{{this._id}}"
                  >Delete</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div
  class="modal fade"
  id="deleteModal"
  hidden
  tabindex="-1"
  role="dialog"
  aria-labelledby="deleteModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-delete__admin" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this Tag?
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >Cancel</button>
        <button
          type="button"
          class="btn btn-danger"
          id="confirmDeleteBtn"
        >Delete</button>
      </div>
    </div>
  </div>
</div>