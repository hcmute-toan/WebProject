<div class="container mt-5">

  <div class="container-fluid">
    <div class="row">
      <div class="col-3">
        <ul class="admin__list">
          <li class="admin__item">
            <a href="/admin/dashboard"><span>
                Dashboard</span></a>
          </li>
          <li class="admin__item active">
            <a href="/admin/manage-articles"><span>
                Manage Articles</span></a>
          </li>
          <li class="admin__item">
            <a href="/admin/manage-users"><span>
                Manage Users</span></a>
          </li>
          <li class="admin__item">
            <a href="/admin/manage-categories"><span>
                Manage Categories</span></a>
          </li>
          <li class="admin__item">
            <a href="/admin/manage-tags"><span>
                Manage Tags</span></a>
          </li>
          <li class="admin__item">
            <a href="/admin/extend-subscription"><span>
                Extend Subscription</span></a>
          </li>
        </ul>
      </div>
      <div class="col-9">
        <h1 class="admin__heading"> Manage Articles</h1>
        <h1>Manage Articles</h1>
        <input type="text" placeholder="Search articles..." id="search" />
        <div
          class="add-btn-container"
          style="display: flex; justify-content : flex-end"
        >
          <a href="/admin/manage-add-article" class="btn btn-add">Add Article</a>
        </div>
        <table class="admin__table">
          <thead>
            <tr>
              <th>ID
                <button
                  class="sort-btn"
                  data-sort="id"
                  data-order="asc"
                >▲</button>
                <button
                  class="sort-btn"
                  data-sort="id"
                  data-order="desc"
                >▼</button>
              </th>
              <th>Title
                <button
                  class="sort-btn"
                  data-sort="name"
                  data-order="asc"
                >▲</button>
                <button
                  class="sort-btn"
                  data-sort="name"
                  data-order="desc"
                >▼</button>
              </th>
              <th>Author
                <button
                  class="sort-btn"
                  data-sort="name"
                  data-order="asc"
                >▲</button>
                <button
                  class="sort-btn"
                  data-sort="name"
                  data-order="desc"
                >▼</button>
              </th>
              <th>Category
                <button
                  class="sort-btn"
                  data-sort="name"
                  data-order="asc"
                >▲</button>
                <button
                  class="sort-btn"
                  data-sort="name"
                  data-order="desc"
                >▼</button>
              </th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="articleList">
            {{#each articles}}
              <tr>
                <td>{{increment @index}}</td>
                <td>{{this.title}}</td>
                <td style="display: flex; align-item : center ; gap:10px">
                  <img src="{{this.author_id.image}}" class="avatar" alt="" />
                  <span
                    style="font-size: 2rem ; line-height: 2; display:block"
                  >{{this.author_id.username}}</span></td>
                <td>{{this.category_id.name}}</td>
                <td>{{this.status}}</td>
                <td>
                  <a
                    href="/admin/{{this._id}}/manage-detail-article"
                    class="btn btn-add"
                    style="background-color: orange;"
                  >Detail</a>
                  <a
                    href="/admin/{{this._id}}/manage-edit-article"
                    class="btn btn-add"
                  >Edit</a>
                  <a
                    href="#"
                    class="btn btn-danger btn-add"
                    data-toggle="modal"
                    data-target="#deleteModal"
                    data-id="{{this._id}}"
                  >Delete</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div
  class="modal fade"
  id="deleteModal"
  hidden
  tabindex="-1"
  role="dialog"
  aria-labelledby="deleteModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-delete__admin" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this Article?
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >Cancel</button>
        <button
          type="button"
          class="btn btn-danger"
          id="confirmDeleteBtn"
        >Delete</button>
      </div>
    </div>
  </div>
</div>