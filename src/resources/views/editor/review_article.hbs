<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-12">
      <div class="article-container">
        <h1 class="article-header">{{article.title}}</h1>

        <div class="article-metadata">
          <img src="{{article.author_id.image}}" alt="" class="avatar" />
          <span class="article-author">Author:
            {{article.author_id.username}}</span>
          |
          <span class="article-date">Created At:
            {{article.createdAt}}</span>
        </div>

        <div class="article-summary">
          <h2>Summary</h2>
          <p style="text-align: center;">{{article.summary}}</p>
        </div>

        <div class="article-content">
          <h2>Content</h2>
          <p>{{{article.content}}}</p>
        </div>
      </div>

    </div>
  </div>
  <div class="action_btn d-flex justify-content-center">
    <div class="back-btn-container"  style="border: 2px solid #ccc; width:100px; height:60px; text-align:center;">
      <a href="/editor/dashboard" class="btn btn-back" style=" line-height:45px; font-weight:800">Back</a>
    </div>
  </div>
</div>