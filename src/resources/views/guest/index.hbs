<div class="container mt-5 mb-5">
  <div class="row row-cols-2">
    <div class="col-lg-12 col-md-12 col-xs-12 col-6">
      <div class="row">
        <div
          id="carouselExampleCaptions"
          class="carousel slide col-12"
          data-bs-ride="carousel"
        >
          <div class="carousel-indicators">
            <button
              type="button"
              data-bs-target="#carouselExampleCaptions"
              data-bs-slide-to="0"
              class="active"
              aria-current="true"
              aria-label="Slide 1"
            ></button>
            <button
              type="button"
              data-bs-target="#carouselExampleCaptions"
              data-bs-slide-to="1"
              aria-label="Slide 2"
            ></button>
            <button
              type="button"
              data-bs-target="#carouselExampleCaptions"
              data-bs-slide-to="2"
              aria-label="Slide 3"
            ></button>
          </div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="/assets/img/1.png" class="d-block w-100" alt="..." />
              <div class="carousel-caption d-none d-md-block">
                {{! <h5>First slide label</h5> }}
                {{! <p>Some representative placeholder content for the first slide.</p> }}
              </div>
            </div>
            <div class="carousel-item">
              <img src="/assets/img/2.png" class="d-block w-100" alt="..." />
              <div class="carousel-caption d-none d-md-block">
                {{! <h5>Second slide label</h5> }}
                {{! <p>Some representative placeholder content for the second slide.</p> }}
              </div>
            </div>
            <div class="carousel-item">
              <img src="/assets/img/3.png" class="d-block w-100" alt="..." />
              <div class="carousel-caption d-none d-md-block">
                {{! <h5>Third slide label</h5> }}
                {{! <p>Some representative placeholder content for the third slide.</p> }}
              </div>
            </div>
          </div>
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselExampleCaptions"
            data-bs-slide="prev"
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#carouselExampleCaptions"
            data-bs-slide="next"
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
        <div class="branch_padding p-4">
          <div class="authHeader col-12 p-0 mt-3">
            <div class="branch"><h1>RISES</h1></div>
          </div>
          <div class="typewriter mt-5">
            <h1 id="typewriter-text">RISES - Real-life, Innovation, Society,
              Entertainment, Sentiment.</h1>
          </div>
          <div class="authHeader col-12 p-0 mt-5">
            <div class="branch"><h1>e-newspaper</h1></div>
          </div>
        </div>

      </div>
    </div>
    <div class="col-lg-12 col-md-12 col-xs-12 col-6">
      <div class="row featured_article_of_the_week">
        <div class="article_title col-12 d-flex justify-content-center">
          <h1 class="article_title--name">Featured article of the week</h1>
        </div>
        {{#each featured_articles}}
          <div class="col-6 mb-4">
            <div class="card">
              <a href="/articleDetail/{{this._id}}">
                <img
                  src="{{this.image_url}}"
                  class="card-img-top"
                  alt="Article Image"
                />
              </a>
              <div class="card-body">
                <a href="/articleDetail/{{this._id}}"><h5
                    class="card-title"
                  >{{this.title}}</h5></a>
                <br />
                <p class="card-text"><strong>Categories:</strong>
                  {{this.category_id.name}}</p>
                <br />
                <p class="card-text"><strong>Date of Publication:</strong>
                  {{this.Release_at}}</p>
                <br />
                <div class="d-flex align-items-center justify-content-between">
                  <a href="/search/author/{{this.author_id._id}}">
                    <div
                      class="author d-flex flex-nowrap align-items-center justify-content-between"
                    >
                      <img
                        src="{{this.author_id.image}}"
                        class="rounded-circle mr-2"
                        alt="Profile Picture"
                      />
                      <p class="mb-0"><strong
                        >{{this.author_id.username}}</strong></p>
                    </div>
                  </a>
                  <div class="type_article text-center">
                    <p class="card-text"><strong>Type: </strong>
                      {{this.type}}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="row mt-5 top_10_most_viewed_articles">
    <div class="article_title col-12 d-flex justify-content-center">
      <div class="article_title--name">Top 10 most viewed articles</div>
    </div>
    <div class="row scroll_article">
      {{#each articles_10_most_view}}
        <div class="col-xl-12 col-lg-12 col-md-12 col-6">
          <div class="card mb-4">
            <div class="row no-gutters">
              <div class="col-4 d-flex align-items-center">
                <a href="/articleDetail/{{this._id}}">
                  <img
                    src="{{this.image_url}}"
                    class="card-img"
                    alt="Article Image"
                  />
                </a>
              </div>
              <div class="col-8">
                <div class="card-body">
                  <a href="/articleDetail/{{this._id}}"><h5
                      class="card-title"
                    >{{this.title}}</h5></a>
                  <p class="card-text"><strong>Categories:</strong>
                    {{this.category_id.name}}</p>
                  <p class="card-text"><strong>Date of Publication:</strong>
                    {{this.Release_at}}</p>
                  <a href="/search/author/{{this.author_id._id}}">
                    <div class="d-flex align-items-center">
                      <img
                        src="{{this.author_id.image}}"
                        class="rounded-circle mr-2"
                        alt="Profile Picture"
                      />
                      <p class="mb-0">{{this.author_id.username}}</p>
                    </div>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
  <div class="row mt-5 top_10_most_viewed_articles">
    <div class="article_title col-12 d-flex justify-content-center">
      <div class="article_title--name">Top 10 latest articles</div>
    </div>
    <div class="row scroll_article">
      {{#each articles_10_newest}}
        <div class="col-xl-12 col-lg-12 col-md-12 col-6">
          <div class="card mb-4">
            <div class="row no-gutters">
              <div class="col-4 d-flex align-items-center">
                <a href="/articleDetail/{{this._id}}">
                  <img
                    src="{{this.image_url}}"
                    class="card-img"
                    alt="Article Image"
                  />
                </a>
              </div>
              <div class="col-8">
                <div class="card-body">
                  <a href="/articleDetail/{{this._id}}"><h5
                      class="card-title"
                    >{{this.title}}</h5></a>
                  <p class="card-text"><strong>Categories:</strong>
                    {{this.category_id.name}}</p>
                  <p class="card-text"><strong>Date of Publication:</strong>
                    {{this.Release_at}}</p>
                  <a href="/search/author/{{this.author_id._id}}">
                    <div class="d-flex align-items-center">
                      <img
                        src="{{this.author_id.image}}"
                        class="rounded-circle mr-2"
                        alt="Profile Picture"
                      />
                      <p class="mb-0">{{this.author_id.username}}</p>
                    </div>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
  <div class="row mt-5 top_10_most_viewed_articles">
    <div class="article_title col-12 d-flex justify-content-center">
      <div class="article_title--name">Top 10 categories with latest posts</div>
    </div>
    <div class="row scroll_article">
      {{#each top_10_categories_with_latest_articles}}
        <div class="col-xl-12 col-lg-12 col-md-12 col-6">
          <div class="card mb-4">
            <div class="row no-gutters">
              <div class="col-4 d-flex align-items-center">
                <a href="/articleDetail/{{this._id}}">
                  <img
                    src="{{latestArticle.image_url}}"
                    class="card-img"
                    alt="Article Image"
                  />
                </a>
              </div>
              <div class="col-8">
                <div class="card-body">
                  <a href="/articleDetail/{{this._id}}"><h5
                      class="card-title"
                    >{{latestArticle.title}}</h5></a>
                  <p class="card-text"><strong>Categories:</strong>
                    {{category.name}}</p>
                  <p class="card-text"><strong>Date of Publication:</strong>
                    {{latestArticle.Release_at}}</p>
                  <a href="/search/author/{{author._id}}">
                    <div class="d-flex align-items-center">
                      <img
                        src="{{author.image}}"
                        class="rounded-circle mr-2"
                        alt="Profile Picture"
                      />
                      <p class="mb-0">{{author.username}}</p>
                    </div>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>