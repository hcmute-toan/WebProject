<div class="container reset_password">
  <form
    action="/auth/otp-verification"
    method="POST"
    class="auth__form auth__form-forgot"
  >
    <div class="row w-100">
      <h1 class="rsp_title">Forgot Password</h1>

      <div class="enter_email">
        <label for="rsp_email" class="rsp_title_label">Email</label>
        <input
          type="email"
          name="email"
          id="rsp_email"
          placeholder="Enter Email"
          class="input_email"
          required
        />
      </div>
      <button type="submit" class="retrieve_password">Retrieve Password</button>
    </div>
  </form>
</div>